# NARCI shapes Ontology
<http://www.purl.org/narci_sh/schema#> a owl:Ontology ;
     dcterm:title "narci" ;
     dcterm:modified "2017-11-09"^^<http://www.w3.org/2001/XMLSchema#date>;
     dcterm:description """
                            (c) 2017 Le Centre National de la Recherche Scientifique (CRNS)
                                     Forschungszentrum Juelich GmbH

                            narci_sh is a shapes ontology for calcium imaging.
                            Developed under the auspices of 
                            European Union
                            Human Brain Project (HBP)
                            Work package SP 5.7.2 named NAR.
                            NAR stands for Neural Activity Resource.
                            narci stands for NAR Calcium Imaging.
                 
                         """@en ;
     dcterm:creator narci_sh:MS;
     dcterm:creator narci_sh:APD .


# narci:Experiment class shape
narci_sh:ExperimentShape
	a sh:NodeShape ;
	sh:targetClass narci:Experiment;   
        #
        # narci:imaging_depth should be 
        #   Type of double
        #   Greater than 0.0 mm
        #   Less than 10.0 mm
        #   Provided at least once
        #    
	sh:property [                 
		     sh:path narci:imaging_depth; 
		     sh:minCount 1 ;
		     sh:maxCount 1 ;
                     sh:minExclusive 0.0;
                     sh:maxInclusive 1000.0;
		     sh:datatype xsd:double;
	            ] .
